<h1>Eat-Da-Burger!</h1>

<h2>Burgers that want to be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>
